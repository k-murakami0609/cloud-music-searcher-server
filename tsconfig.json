{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "compileOnSave": true,
  "typeRoots": ["types", "node_modules/@types"],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules/**"
  ]
}
